<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:padding="6dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="criterion1"
            android:textSize="18sp"
            android:layout_margin="2dp"
            />

        <NumberPicker
            android:id="@+id/numberPicker11"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker12"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker13"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker14"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="criterion1"
            android:textSize="18sp"
            android:layout_margin="2dp"
            />

        <NumberPicker
            android:id="@+id/numberPicker21"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker22"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker23"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />
        <NumberPicker
            android:id="@+id/numberPicker1234"
            android:layout_width="@dimen/np_width"
            android:layout_height="@dimen/np_height"
            android:theme="@style/NumberPickerText"
            android:layout_margin="2dp"
            />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/numberPicker24"
            android:layout_width="40dp"
            android:layout_height="70dp"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_max="4"
            app:np_min="0"
            app:np_orientation="vertical"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="28sp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="20sp"
            app:np_value="3" />

    </GridLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selected Number Display here"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="user">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    </LinearLayout>