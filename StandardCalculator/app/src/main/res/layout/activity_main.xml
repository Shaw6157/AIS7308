<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="show result"
        android:inputType="textPersonName"
        android:text="123+456=789"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <GridLayout
        android:id="@+id/BtnGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:padding="5dp"
        android:rowCount="4">

        <Button
            android:id="@+id/button2"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/btn_num_shape"
            android:padding="5dp"
            android:text="1"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="1"
            android:layout_row="3"

            android:background="@drawable/btn_num_shape"
            android:text="0"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button8"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/btn_num_shape"
            android:text="7"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button17"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@drawable/btn_opr_shape"
            android:text="*"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="2"
            android:layout_row="2"

            android:background="@drawable/btn_num_shape"
            android:text="3"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button12"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="2"
            android:layout_row="3"

            android:background="@drawable/btn_num_shape"
            android:text="."
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button11"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="0"
            android:layout_row="3"

            android:background="@drawable/btn_num_shape"
            android:text="C"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button9"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="1"
            android:layout_row="0"

            android:background="@drawable/btn_num_shape"
            android:text="8"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button13"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="3"
            android:layout_row="3"

            android:background="@drawable/btn_opr_shape"
            android:text="="
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button5"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="0"
            android:layout_row="1"

            android:background="@drawable/btn_num_shape"
            android:text="4"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button7"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="2"
            android:layout_row="1"

            android:background="@drawable/btn_num_shape"
            android:text="6"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button15"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="3"
            android:layout_row="1"

            android:background="@drawable/btn_opr_shape"
            android:text="-"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button10"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="2"
            android:layout_row="0"

            android:background="@drawable/btn_num_shape"
            android:text="9"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button14"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="3"
            android:layout_row="2"

            android:background="@drawable/btn_opr_shape"
            android:text="+"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="1"
            android:layout_row="2"

            android:background="@drawable/btn_num_shape"
            android:text="2"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@string/btn_size"
            android:layout_height="@string/btn_size"
            android:layout_column="1"
            android:layout_row="1"

            android:background="@drawable/btn_num_shape"
            android:text="5"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </GridLayout>

</LinearLayout>