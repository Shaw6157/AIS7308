<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_RootQ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".QuestionActivity">

    <LinearLayout
        android:id="@+id/lyt_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.8"
        android:background="@color/colorBg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_lv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.8"
            android:contentDescription="level"
            app:srcCompat="@drawable/lv1" />

        <LinearLayout
            android:id="@+id/lyt_Progress"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="Question Progress:" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="00/30"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_Timer"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="3"
                android:editable="false"
                android:gravity="bottom"
                android:inputType="time"
                android:text=" 00:00"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/lyt_Wrong"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_x1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="wrong 1" />

                <ImageView
                    android:id="@+id/img_x2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="wrong 2" />

                <ImageView
                    android:id="@+id/img_x3"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="wrong 3" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_Question"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_q"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Question"
            android:layout_width="210dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:gravity="center_vertical|center_horizontal"
            android:text="12 + 34 ="
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_Mark"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:contentDescription="question mark"
            app:srcCompat="@drawable/qmarks1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_btn1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:alpha="0.9"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_Num1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/btnBlu"
            android:fontFamily="casual"
            android:text="15"
            android:textColor="@color/colorFont"
            android:textSize="44sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Num2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/btnGre"
            android:fontFamily="casual"
            android:text="15"
            android:textColor="@color/colorFont"
            android:textSize="44sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:alpha="0.9"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_Num3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/btnRed"
            android:fontFamily="casual"
            android:text="28"
            android:textColor="@color/colorFont"
            android:textSize="44sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Num4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/btnYel"
            android:fontFamily="casual"
            android:text="28"
            android:textColor="@color/colorFont"
            android:textSize="44sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>